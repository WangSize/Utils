<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_dialog_base"
                android:orientation="vertical"
                android:translationZ="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="提示"
        android:textColor="#0c0306"
        android:textSize="19sp"/>

    <com.norca.myapplication.CircularProgressView
        android:id="@+id/pb_load"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:angleAnimationDurationMillis="1000"
        app:color="@color/circular_blue"
        app:borderWidth="5dp"
        app:minSweepAngle="5"
        app:sweepAnimationDurationMillis="400"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/pb_load"
        android:layout_alignTop="@+id/pb_load"
        android:text="加载中···"
        android:textColor="#9a9b98"
        android:textSize="16sp"/>

</RelativeLayout>